<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player" />

    <LinearLayout
        android:id="@+id/linearLayoutLeft"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ToggleButton
            android:id="@+id/buttonRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/red_button"
            android:padding="10dip"
            android:textColor="@color/White"
            android:textOff=""
            android:textOn="" />

        <ToggleButton
            android:id="@+id/buttonGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/green_button"
            android:padding="10dip"
            android:textColor="@color/White"
            android:textOff=""
            android:textOn="" />

        <ToggleButton
            android:id="@+id/buttonBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/blue_button"
            android:padding="10dip"
            android:textColor="@color/White"
            android:textOff=""
            android:textOn="" />

        <ToggleButton
            android:id="@+id/buttonYellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/yellow_button"
            android:padding="10dip"
            android:textColor="@color/Black"
            android:textOff=""
            android:textOn="" />

        <ToggleButton
            android:id="@+id/buttonBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/black_button"
            android:padding="10dip"
            android:textColor="@color/White"
            android:textOff=""
            android:textOn="" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewTrains"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Trains" />

    <GridView
        android:id="@+id/gridViewTrains"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:numColumns="4" />

    <TextView
        android:id="@+id/textViewContractsCompleted"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Contracts Completed" />

    <GridView
        android:id="@+id/gridViewContractsCompleted"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:numColumns="5" />

    <TextView
        android:id="@+id/textViewBonuses"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Bonuses" />

    <GridView
        android:id="@+id/gridViewBonuses"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:numColumns="2" />

    <TextView
        android:id="@+id/textViewContractsMissed"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Contracts Missed" />

    <GridView
        android:id="@+id/gridViewContractsMissed"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:numColumns="5" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1" />

    <CheckBox
        android:id="@+id/buttonLastTurnComplete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done" />

</LinearLayout>