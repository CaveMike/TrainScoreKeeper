<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tableLayoutColors"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TableRow >

        <TextView
            style="@style/PlayerTableText"
            android:gravity="center"
            android:padding="10dip"
            android:text="Player"
            android:textStyle="bold" />

        <TextView
            style="@style/PlayerTableText"
            android:gravity="center"
            android:padding="10dip"
            android:text="Trains"
            android:textStyle="bold" />

        <TextView
            style="@style/PlayerTableText"
            android:gravity="center"
            android:padding="10dip"
            android:text="Contracts"
            android:textStyle="bold" />

        <TextView
            style="@style/PlayerTableText"
            android:gravity="center"
            android:padding="10dip"
            android:text="Bonus"
            android:textStyle="bold" />
    </TableRow>

    <TableRow >

        <ToggleButton
            android:id="@+id/buttonRed"
            style="@style/PlayerTableText"
            android:layout_height="match_parent"
            android:background="@drawable/red_button"
            android:textColor="@color/White"
            android:textOff="Red"
            android:textOn="Red" />

        <TextView
            style="@style/PlayerTableText"
            android:gravity="center"
            android:padding="10dip"
            android:text="0" />

        <TextView
            style="@style/PlayerTableText"
            android:gravity="center"
            android:padding="10dip"
            android:text="0" />

        <TextView
            style="@style/PlayerTableText"
            android:gravity="center"
            android:padding="10dip"
            android:text="0" />
    </TableRow>

    <TableRow >

        <ToggleButton
            android:id="@+id/buttonGreen"
            style="@style/PlayerTableText"
            android:layout_height="match_parent"
            android:background="@drawable/green_button"
            android:textColor="@color/White"
            android:textOff="Green"
            android:textOn="Green" />

        <TextView
            style="@style/PlayerTableText"
            android:gravity="center"
            android:padding="10dip"
            android:text="0" />

        <TextView
            style="@style/PlayerTableText"
            android:gravity="center"
            android:padding="10dip"
            android:text="0" />

        <TextView
            style="@style/PlayerTableText"
            android:gravity="center"
            android:padding="10dip"
            android:text="0" />
    </TableRow>

    <TableRow >

        <ToggleButton
            android:id="@+id/buttonBlue"
            style="@style/PlayerTableText"
            android:layout_height="match_parent"
            android:background="@drawable/blue_button"
            android:textColor="@color/White"
            android:textOff="Blue"
            android:textOn="Blue" />

        <TextView
            style="@style/PlayerTableText"
            android:gravity="center"
            android:padding="10dip"
            android:text="0" />

        <TextView
            style="@style/PlayerTableText"
            android:gravity="center"
            android:padding="10dip"
            android:text="0" />

        <TextView
            style="@style/PlayerTableText"
            android:gravity="center"
            android:padding="10dip"
            android:text="0" />
    </TableRow>

    <TableRow >

        <ToggleButton
            android:id="@+id/buttonYellow"
            style="@style/PlayerTableText"
            android:layout_height="match_parent"
            android:background="@drawable/yellow_button"
            android:textColor="@color/Black"
            android:textOff="Yellow"
            android:textOn="Yellow" />

        <TextView
            style="@style/PlayerTableText"
            android:gravity="center"
            android:padding="10dip"
            android:text="0" />

        <TextView
            style="@style/PlayerTableText"
            android:gravity="center"
            android:padding="10dip"
            android:text="0" />

        <TextView
            style="@style/PlayerTableText"
            android:gravity="center"
            android:padding="10dip"
            android:text="0" />
    </TableRow>

    <TableRow >

        <ToggleButton
            android:id="@+id/buttonBlack"
            style="@style/PlayerTableText"
            android:layout_height="match_parent"
            android:background="@drawable/black_button"
            android:textColor="@color/White"
            android:textOff="Black"
            android:textOn="Black" />

        <TextView
            style="@style/PlayerTableText"
            android:gravity="center"
            android:padding="10dip"
            android:text="0" />

        <TextView
            style="@style/PlayerTableText"
            android:gravity="center"
            android:padding="10dip"
            android:text="0" />

        <TextView
            style="@style/PlayerTableText"
            android:gravity="center"
            android:padding="10dip"
            android:text="0" />
    </TableRow>

</TableLayout>